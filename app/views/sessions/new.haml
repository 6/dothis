%h1 Login

= form_tag sessions_path do
  %label{:for => "email_or_username"} Email or Username
  .form-field= text_field_tag :email_or_username, params[:email_or_username]
  = label_tag :password
  .form-field= password_field_tag :password
  %label.checkbox{:for => "remember_me"}
    = check_box_tag :remember_me, "1", true
    Remember me
  .form-actions= submit_tag "Login", :disable_with => "Submitting...", :class => "btn"
